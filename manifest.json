{
    "name": "YouTube Buddy Client",
    "description": "Chrome extension client for YouTube Buddy. https://github.com/bchean/youtube-buddy-client",
    "version": "0.1",
    "manifest_version": 2,

    "content_scripts": [
        {
            "matches": ["*://www.youtube.com/watch?v=*"],
            "js": ["content.js"]
        }
    ],
    "icons": {
        "128": "icon.png"
    },
    "permissions": [
        "activeTab",
        "alarms",
        "https://youtube-buddy.herokuapp.com/"
    ]
}
